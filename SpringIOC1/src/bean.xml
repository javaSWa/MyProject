<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="add" class="com.swa.Address">
	  <constructor-arg name="city" value="satara"></constructor-arg>
	</bean>
	
	<bean id="stu" class="com.swa.Student">
	   <constructor-arg name="id" value="96" type="int"/>
	   <constructor-arg name="name" value="swapnil"/>
	   <constructor-arg name="address" ref="add"/>
	</bean>
	
	
	




</beans>